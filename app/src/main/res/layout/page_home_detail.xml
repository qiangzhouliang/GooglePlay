<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_detail_appdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/list_item_bg_selecter">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_detail_safe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/list_item_bg_selecter">
        </FrameLayout>
        <!--HorizontalScrollView : 水平滑动的ScrollView-->
        <HorizontalScrollView
            android:id="@+id/hsv_detail_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#cccccc"/>

        <FrameLayout
            android:id="@+id/fl_detail_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            android:background="@drawable/list_item_bg_selecter">
        </FrameLayout>
    </LinearLayout>
</ScrollView>
