<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:background="@drawable/list_item_bg_selecter">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_lih_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_default"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_lih_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_lih_icon"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="应用名称"/>

            <RatingBar
                android:id="@+id/rb_lih_star"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/tv_lih_name"
                android:rating="2.5"
                android:layout_marginTop="5dp"
                android:progressDrawable="@drawable/custom_ratingbar"
                android:layout_toRightOf="@id/iv_lih_icon"/>
            <TextView
                android:id="@+id/tv_lih_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_lih_icon"
                android:layout_below="@id/rb_lih_star"
                android:textSize="16sp"
                android:textColor="#8000"
                android:text="3.70MB"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/iv_lih_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_download"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="3dp"
                    android:text="下载"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#cccccc"/>
        <TextView
            android:id="@+id/tv_lih_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8000"
            android:singleLine="true"
            android:padding="5dp"
            android:text="把拿吧拿吧拿把那把那小魔仙把拿吧拿吧拿把那把那小魔仙"/>
    </LinearLayout>

</LinearLayout>
